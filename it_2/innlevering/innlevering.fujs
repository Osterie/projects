print("-----Oppgave 3----- \n");

var maxpris = 0;
var maxtid = 0;

var minpris = 100000;
var mintid = 0;

var tmp = 0;


for (let i = 1; i <= priser.length; i++){
    
    tmp = priser[i-1];
    
    if (tmp > maxpris){
  
        maxpris = priser[i-1];
        maxtid = i;
  }
  
    if (tmp < minpris){
  
        minpris = priser[i-1];
        mintid = i;
  }

}

print("Klokken: " + maxtid + " var prisen dyrest: " + maxpris + "øre/kWh \n");

print("Klokken: " + mintid + " var prisen billigst: " + minpris + "øre/kWh \n");


