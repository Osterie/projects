function gjennomsnitt(liste){
    sum = 0;
    for (let i = 1; i <= liste.length; i++){
        sum += liste[i-1];
        
    
    }
    snitt = "Gjennomsnittspris for listen er: " + (sum/liste.length).toFixed(2) + "\n";
    
    
    return snitt;
}

print(gjennomsnitt(priser));


