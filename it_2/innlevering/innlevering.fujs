print("-----Oppgave 6----- \n");


function øktpris(liste){
    
    nypris = [];
    
    for (let i = 1; i <= liste.length; i++){
        
        nypris.push((liste[i-1]*1.15).toFixed(2));      
    
        
    }
    return nypris;
}

print("Prisene etter økning er: " + øktpris(priser));
plot(øktpris(priser), "svart", "Svart er etter økning");
